<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ctj.oa.work.task.TaskDetailActivity">

    <com.ctj.oa.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="任务详情"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="讨论"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="接收"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="完成"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="撤销"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="同意"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_not"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="不同意"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_recover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.6dp"
            android:layout_marginRight="0.6dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="恢复"
            android:textColor="@color/super_blue"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>
